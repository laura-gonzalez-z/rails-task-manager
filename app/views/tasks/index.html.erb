<h1>My tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <input class="form-check-input me-1" type="checkbox" value="" <%= 'checked' if task.completed %>>
      <%= link_to task.title, task_path(task) %>
      <%= link_to raw('<i class="fa-solid fa-trash-can"></i>'), task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
<hr />
<%= link_to raw('<i class="fa-solid fa-plus"></i> Add new task'), new_task_path %>
